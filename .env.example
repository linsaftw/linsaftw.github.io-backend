# ======= LinsaFTW Blog Backend =======
PORT=3000

# MySQL connection
DB_HOST=localhost
DB_USER=root
DB_PASS=password
DB_NAME=db

# Session secret - CHANGE THIS before production!
SESSION_SECRET=change_this_to_a_random_strong_secret_value_please

# Session cookie lifetime (seconds)
SESSION_EXPIRES_SECONDS=86400

# Rate limiting
RATE_LIMIT_REGISTER_PER_SECOND=1
RATE_LIMIT_LOGIN_PER_SECOND=1
BLOCK_SECONDS_ON_VIOLATION=60

# CORS allowed origin (your GitHub Pages / frontend URL)
CORS_ORIGIN=http://localhost:4000

# Admin terminal - comma separated allowed IPs (leave empty to allow any authed admin)
TERMINAL_ALLOWED_IPS=127.0.0.1,::1
